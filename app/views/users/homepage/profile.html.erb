<!-- Page Content -->
<div class="page-content">
    <!-- Page Header -->
     <div class="page-header d-flex flex-column flex-md-row align-items-md-center">
      <div class="page-header-left flex-fill">
          <div class="page-header-title d-flex">
              <img src="https://img.icons8.com/nolan/60/gear.png"/>
              <div class="page-info mt-3">
                  <h5 class="page-title">Update Profile</h5>
              </div>
          </div>
      </div>
  </div>

    <!-- / Page Header -->

    <!-- Form - Update Profile -->
    <%= form_for(:user, url: users_update_profile_path, id: 'profile-edit', method: :patch, :html => {:multipart => true}) do |f|%>
        <!-- Section Header - Update Profile -->
        <div class="section-header d-md-flex align-items-center">
            <div class="section-header-left flex-fill">
                <a href="<%= root_path %>" class="page-btn-link">
                    <i class="icon icon-reply"></i>
                    Back to Homepage
                </a>
            </div>
            
        </div>
        <!-- / Section Header - Update Profile -->

        <!-- Section - Update Profile -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Update Profile</h5>
            </div>
            <div class="card-body">
                <!-- Form Fields -->
                <div class="form-row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" id="name" name="user[name]" class="form-control" name="name" value="<%= @user.name%>" required>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" id="email"  name="user[email_address]" class="form-control" name="email" value="<%= @user.email%>" required>
                        </div>
                    </div>
                </div>
                <!-- / Form Fields -->
            </div>
        </div>
        <div class="row pt-4">
            <div class="col-lg-12 text-right">
                <div class="section-header-right ml-auto">
                    <button type="submit" class="btn btn-primary text-uppercase">Update</button>
                </div>
            </div>
        </div>
        <!-- / Section - Update Profile -->
   <% end %>
    <!-- / Form - Update Profile -->

    <!-- Form - Change Your Password -->
    <%= form_for(:user, url: users_change_password_path, id: 'password-change', method: :patch) do |f|%>
        <!-- Section Header - Change Your Password -->
        <div class="section-header d-md-flex align-items-center">
            <div class="section-header-right ml-auto">
            </div>
        </div>
        <!-- / Section Header - Change Your Password -->

        <!-- Section - Change Your Password -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Change Your Password</h5>
            </div>
            <div class="card-body">
                <!-- Form Fields -->
                <div class="form-row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="user[password]" required>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="password-confirmation">Retype Password</label>
                            <input type="password" class="form-control" name="user[password_confirmation]" required>
                        </div>
                    </div>
                </div>
                <!-- / Form Fields -->
            </div>
            <div class="card-footer pt-4">
             <div class="row">
                <div class="col-12 text-right">
                    <div class="section-header-right ml-auto">
                        <button type="submit" class="btn btn-primary text-uppercase">Save</button>
                    </div>
                </div>
            </div>
            </div>
        </div>
        <!-- / Section - Change Your Password -->
    <% end %>
    <!-- / Form - Change Your Password -->
</div>
<!-- / Page Content -->

